# Spring properties
spring:
  application:
    name: PortalApi  # Service registers under this name
  security:
    username: admin
    password: openpaasta
  flyway:
    enabled: false
  rabbitmq:
    host: <%= p('spring.rabbitmq.host')%>
    port: <%= p('spring.rabbitmq.port')%>
    username: <%= p('spring.rabbitmq.username')%>
    password: <%= p('spring.rabbitmq.password')%>
  cloud:
    client:
      hostname: <%= spec.ip %>

server:
  address: <%= spec.ip %>
  port: <%= p('server.port')%>

config:
  vault:
    project: <%= p('vault.path') %>
    iaas: <%= p('vault.iaas') %>
    list: <%= p('vault.list') %>
  rabbitmq:
    queue-name: <%= p('config.rabbitmq.queue-name') %>
    exchange-name: <%= p('config.rabbitmq.exchange-name') %>
    routing-key: <%= p('config.rabbitmq.routing-key') %>
    response:
      mp:
        topic: <%= p('config.rabbitmq.response.mp.topic') %>
        routing: <%= p('config.rabbitmq.response.mp.routing') %>
      up:
        topic: <%= p('config.rabbitmq.response.up.topic') %>
        routing: <%= p('config.rabbitmq.response.up.routing') %>

bosh:
  client_id: <%= p('bosh.id') %>
  client_secret: <%= p('bosh.secret') %>
  url: <%= p('bosh.url') %>
  oauth_url: <%= p('bosh.oauth_url') %>

tailsocket:
  port: 5555

management:     # If you set off security...
  security:
    enabled: false

# CloudFoundry API Url
cloudfoundry:
  cc:
    api:
      url: https://api.<%= p('cloudfoundry.domain')%>
      uaaUrl: https://uaa.<%= p('cloudfoundry.domain')%>
      sslSkipValidation: <%= p('cloudfoundry.cc.api.sslSkipValidation')%>
  # CloudFoundry Login information
  user:
    admin:
      username: <%= p('cloudfoundry.user.admin.username')%>
      password: <%= p('cloudfoundry.user.admin.password')%>
    uaaClient:
      clientId: <%= p('cloudfoundry.user.uaaClient.clientId')%>
      clientSecret: <%= p('cloudfoundry.user.uaaClient.clientSecret')%>
      adminClientId: <%= p('cloudfoundry.user.uaaClient.adminClientId')%>
      adminClientSecret: <%= p('cloudfoundry.user.uaaClient.adminClientSecret')%>
      loginClientId: <%= p('cloudfoundry.user.uaaClient.loginClientId')%>
      loginClientSecret: <%= p('cloudfoundry.user.uaaClient.loginClientSecret')%>
      skipSSLValidation: <%= p('cloudfoundry.user.uaaClient.skipSSLValidation')%>
  authorization: <%= p('cloudfoundry.authorization')%>


abacus:
  url: <%= p('abacus.url')%>

# 포탈 상세 모니터링
monitoring:
  api:
    url: <%= p('monitoring.api.url')%>

multipart:
  maxFileSize: 1000Mb
  maxRequestSize: 1000Mb

paasta:
  portal:
    api:
      authorization:
        base64: Basic YWRtaW46b3BlbnBhYXN0YQ==
      zuulUrl:
        cfapi: http://zuul.service.portalapi.internal:<%= link('paas-ta-portal-gateway-link').p('server.port') %>/portalapi
        commonapi: http://zuul.service.portalapi.internal:<%= link('paas-ta-portal-gateway-link').p('server.port') %>/commonapi
        storageapi: http://zuul.service.portalapi.internal:<%= link('paas-ta-portal-gateway-link').p('server.port') %>/storageapi
    storageapi:
      type: swift

# Discovery Server Access
eureka:
  client:
    serviceUrl:
      defaultZone: http://eureka.service.portalapi.internal:<%= link('paas-ta-portal-registration-link').p('server.port') %>/eureka/
      registry-fetch-interval-seconds: 5
  instance:
    hostname: <%= spec.ip %>
    lease-expiration-duration-in-seconds: 5
    lease-renewal-interval-in-seconds: 10
