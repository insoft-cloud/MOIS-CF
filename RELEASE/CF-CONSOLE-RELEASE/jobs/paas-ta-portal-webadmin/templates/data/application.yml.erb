spring:
  application:
      name: PortalWebAdmin
  thymeleaf:
    cache: true # false : 서버 재시작 없이 새로고침.  개발서버 이상부터는 true로 설정.
    check-template: true
    check-template-location: true
    content-type: text/html
    enabled: true
    encoding: UTF-8
    # excluded-view-names:
    mode: XHTML
    prefix: /WEB-INF/views/
    suffix: .html
    # template-resolver-order:
    # view-names:
  http:
    multipart:
      enabled: true
      max-file-size: 1024MB
      max-request-size: 1024MB
      location: ${java.io.tmpdir}
  servlet:
    multipart:
      enabled: ${spring.http.multipart.enabled}
      max-file-size: ${spring.http.multipart.max-file-size}
      max-request-size: ${spring.http.multipart.max-request-size}
      location: ${spring.http.multipart.location}
  cloud:
    client:
      hostname: <%= spec.ip %>

server:
  address: <%= spec.ip %>
  port: <%= p('server.port')%>
  use-forward-headers: true

keycloak.:
  realm: <%= p('key.realm')%>
  resource: <%= p('key.client')%>
  auth-server-url: <%= p('key.url')%>
  ssl-required: none
  public-client: true
  enabled: true

paasta:
  portal:
    api:
      authorization:
        base64: Basic YWRtaW46b3BlbnBhYXN0YQ==
      zuulUrl:
        cfapi: http://zuul.service.portalapi.internal:<%= link('paas-ta-portal-gateway-link').p('server.port') %>/portalapi
        commonapi: http://zuul.service.portalapi.internal:<%= link('paas-ta-portal-gateway-link').p('server.port') %>/commonapi
        storageapi: http://zuul.service.portalapi.internal:<%= link('paas-ta-portal-gateway-link').p('server.port') %>/storageapi
    storageapi:
      type: swift
logging:
  level:
    org.openpaas.paasta.portal.web.admin.exception.GlobalControllerExceptionHandler: DEBUG

# Discovery Server Access
eureka:
  client:
    serviceUrl:
      defaultZone: http://eureka.service.portalapi.internal:<%= link('paas-ta-portal-registration-link').p('server.port') %>/eureka/
      registry-fetch-interval-seconds: 5
  instance:
    hostname: <%= spec.ip %>
    lease-expiration-duration-in-seconds: 5
    lease-renewal-interval-in-seconds: 10




